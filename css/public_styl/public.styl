display-flex() {
    display: -webkit-box;
    display: -webkit-flex;
    display: -moz-box;
    display: -ms-flexbox;
    display: flex;
}

flex-direction($args) {
    -webkit-flex-direction: $args;
    -moz-flex-direction: $args;
    -ms-flex-direction: $args;
    -o-flex-direction: $args;
    flex-direction: $args;
}

align-items() {
    -webkit-align-items: center;
    -moz-align-items: center;
    -ms-align-items: center;
    -o-align-items: center;
    align-items: center;
}

justify-content(args) {
    -webkit-justify-content: args;
    -moz-justify-content: args;
    -ms-justify-content: args;
    -o-justify-content: args;
    justify-content: args;
}

flex1() {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    -moz-box-flex: 1;
    -ms-flex: 1;
    flex: 1;
}

//1像素边框
border-1px($color)
    position: relative
    &::after
        display: block
        position: absolute
        left: 0
        bottom: 0
        width: 100%
        border-top: 1px solid $color
        content: ''

border($type, $color)
    border: 1px $type $color

vendor(prop, args)
    -webkit-{prop} args
    -moz-{prop} args
    {prop} args

border-radius()
    vendor('border-radius', arguments)

noshake($scale)
    width: 100%;
    height: 0;
    overflow: hidden;
    padding-bottom: $scale;

$primarycolor = rgb(208, 2, 27);
$fontsize = .426667rem;
